#new-reports-edit
  .col-xs-6.new-reports-content
    = form_for @report do |f|
      %h2
        課題を編集
      .form-body
        .form-group
          = f.label :name, "タイトル", class: "control-label"
          = f.text_field :name, class: "form-control"
        .form-group
          = f.label :date, "締切日", class: "control-label"
          %br
          = f.date_select :timelimit, class: "form-control"
        .form-group
          = f.label :description, "説明", class: "control-label"
          = f.text_area :description, class: "form-control"
        = f.submit "送信する", class: "btn btn-success"
